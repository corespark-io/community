      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }
  }

  .filter-group {
    border: none;
    padding: 0;
    margin: 0;
  }
  .filter-group legend {
    font-weight: bold;
    padding-bottom: 0.5rem;
  }
  .checkbox-container {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
