---
// Step 1: Import everything, INCLUDING allPantries
import {
  SERVICES_OFFERED,
  SERVICE_TYPES,
  SERVICE_AREAS,
  REQUIRED_DOCUMENTATION,
} from "@/consts";

// Load all pantry data (This is the new part)
const pantryModules = await import.meta.glob("@/data/pantries/**/*.json", {
  eager: true,
});
const allPantries = Object.values(pantryModules);

// =================================================================
// == 2. THE SERVER-SIDE "AUTO-FILL" / PERFORMANCE FIX ==
// =================================================================
// We build Sets of *only* the filters that are actually
// used by at least one pantry. This happens on the server,
// so it's zero-cost for the user's phone.

const availableServices = new Set<string>();
const availableTypes = new Set<string>();
const availableAreas = new Set<string>();
const availableDocs = new Set<string>();

for (const pantry of allPantries) {
  pantry.services?.forEach((service) => availableServices.add(service));
  pantry.types?.forEach((type) => availableTypes.add(type));
  pantry.eligibility?.serviceArea?.forEach((area) => availableAreas.add(area));
  pantry.eligibility?.documents?.forEach((doc) => availableDocs.add(doc));
}
---

<form id="search-and-filter-form" onsubmit="return false;">
  <div class="search-inline">
    <label for="search-input" class="visually-hidden"
      >Search food pantries</label
    >
    <input
      type="text"
      id="search-input"
      name="searchQuery"
      placeholder="Search by name, city, or zip..."
      aria-label="Search food pantries"
      autocomplete="off"
    />
    <button type="submit" class="search-btn">Search</button>
  </div>

  <details class="filter-accordion">
    <summary>Filter Options</summary>
    <div class="filter-groups-container">
      <fieldset class="filter-group">
        <legend>Services Offered</legend>
        <div class="checkbox-container">
          {
            [...availableServices].map((key) => (
              <div class="checkbox-wrapper">
                <>
                  <input
                    type="checkbox"
                    id={key}
                    name="servicesOffered"
                    value={key}
                  />
                  <label for={key}>{SERVICES_OFFERED[key] || key}</label>
                </>
              </div>
            ))
          }
        </div>
      </fieldset>

      <fieldset class="filter-group">
        <legend>Service Type</legend>
        <div class="checkbox-container">
          {
            [...availableTypes].map((key) => (
              <div class="checkbox-wrapper">
                <>
                  <input
                    type="checkbox"
                    id={key}
                    name="serviceTypes"
                    value={key}
                  />
                  <label for={key}>{SERVICE_TYPES[key] || key}</label>
                </>
              </div>
            ))
          }
        </div>
      </fieldset>

      <fieldset class="filter-group">
        <legend>Service Area</legend>
        <div class="checkbox-container">
          {
            [...availableAreas].map((key) => (
              <div class="checkbox-wrapper">
                <>
                  <input
                    type="checkbox"
                    id={key}
                    name="serviceAreas"
                    value={key}
                  />
                  <label for={key}>{SERVICE_AREAS[key] || key}</label>
                </>
              </div>
            ))
          }
        </div>
      </fieldset>

      <fieldset class="filter-group">
        <legend>Required Documentation</legend>
        <div class="checkbox-container">
          {
            [...availableDocs].map((key) => (
              <div class="checkbox-wrapper">
                <>
                  <input
                    type="checkbox"
                    id={key}
                    name="requiredDocs"
                    value={key}
                  />
                  <label for={key}>{REQUIRED_DOCUMENTATION[key] || key}</label>
                </>
              </div>
            ))
          }
        </div>
      </fieldset>
    </div>
  </details>
</form>

<p id="no-results-message" style="display: none;">
  No pantries found matching your criteria.
</p>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("search-and-filter-form");

    if (form) {
      form.addEventListener("submit", (e) => {
        e.preventDefault(); // Stop page from reloading

        // Use FormData to easily get all values
        const formData = new FormData(form);

        // Get the values from the form
        const filterData = {
          query: formData.get("searchQuery")?.toString() || "",
          services: formData.getAll("servicesOffered") as string[],
          types: formData.getAll("serviceTypes") as string[],
          areas: formData.getAll("serviceAreas") as string[],
          docs: formData.getAll("requiredDocs") as string[],
        };

        // Create and dispatch a custom event
        const filterEvent = new CustomEvent("pantry-filter-update", {
          bubbles: true, // Allows the event to "bubble up"
          detail: filterData, // This is the data we're sending
        });

        // Dispatch the event from the form itself
        form.dispatchEvent(filterEvent);
      });
    }
  });
</script>

<style>
  /* All your existing styles... */
