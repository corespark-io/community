---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import "../styles/base.css";
---

<Layout title="Not Found">
  <main class="container not-found-container">
    <Icon
        name="mdi:progress-alert"
        size="6em"
        class="not-found-icon"
    />
    <h1 class="not-found-404">404 â€“ Page Not Found</h1>
    <p class="not-found-message">
      Sorry, the page you are looking for does not exist.
    </p>
    <a class="not-found-home-link" href="/">Go back home</a>
  </main>
  <style>
    .not-found-container {
      min-height: 60vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: var(--color-background-soft);
      border-radius: 16px;
      box-shadow: 0 4px 32px var(--shadow-color);
      margin-top: 4rem;
      margin-bottom: 4rem;
      padding: 3rem 2rem;
      text-align: center;
    }
    .not-found-icon {
      margin-bottom: 1.5rem;
      color: var(--accent-color);
    }
    .not-found-404 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      color: var(--text-primary);
    }
    .not-found-message {
      color: var(--text-disclaimer);
      font-size: 1.2rem;
      margin-bottom: 2.5rem;
    }
    .not-found-home-link {
      display: inline-block;
      background: var(--accent-color);
      color: var(--light-color);
      padding: 0.85em 2.2em;
      border-radius: 8px;
      font-weight: 600;
      font-size: 1.1rem;
      text-decoration: none;
      box-shadow: 0 2px 12px var(--shadow-color);
      transition: background 0.2s, color 0.2s, box-shadow 0.2s;
    }
    .not-found-home-link:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 24px var(--shadow-color);
      text-decoration: underline;
    }
  </style>
</Layout>